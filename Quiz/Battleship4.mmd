  class Player {
    -string _name
    -Board _ownBoard
    -Board _trackingBoard
    -List~Ship~ _fleet
    +Shoot(Coordinate): bool
    +RemainingShips(): int
  }

  class Board {
    -Cell[][] _grid
    +GetCell(Coordinate): Cell  
